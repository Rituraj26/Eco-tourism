<% include ../partials/header %>

<div class="new_artcraft"> 
	<form action="/artcraft/<%= editedart._id %>?_method=PUT" method="POST">
			<h2>Edit Photograph</h2>
			<div class="container">
				  	<div class="form-group">
				    	<label for="Title">Title</label>
				    	<input type="text" class="form-control" id="Title" name="editart[title]" value="<%= editedart.title %>" required>
				  	</div>
				 	<div class="form-group">
				   		<label for="image">Image Url</label>
				    	<input type="text" class="form-control" id="image" name="editart[image]" value="<%= editedart.image %>" required>
				 	</div>
				 	<div class="form-group">
				    	<label for="description">Description</label>
				    	<textarea class="form-control" id="description" name="editart[description]" required><%= editedart.description %></textarea>
					</div>
					<div class="form-group">
				   		<label for="price">Price</label>
				    	<input type="number" class="form-control" id="price" name="editart[price]" value="<%= editedart.price %>" min="1" step="1" required>
				 	</div>
				 	<div class="form-group">
				    	<label for="phone_no">Phone No</label>
				    	<input type="number" class="form-control" id="phone_no" name="editart[phone_no]" value="<%= editedart.phone_no %>" required>
					</div>
					<div class="form-group">
				    	<label for="Email">Email</label>
				    	<input type="email" class="form-control" id="Email" name="editart[Email]" value="<%= editedart.Email %>" required>
					</div>
				  	<br>
				  	<button type="submit" class="btn btn-primary">Submit</button>
				  	<br><br>
				  	<a href="/artcraft/<%= editedart._id %>">Go Back</a>
			</div>
	</form>
</div>

<% include ../partials/footer %>
